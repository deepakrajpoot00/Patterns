/* 
      * * * * * * *       
        * * * * *   
          * * *
            * 
*/

#include <stdio.h>

int main() {
   int n;
   printf("Enter the number of rows: ");
   scanf("%d", &n);
   
   for (int i=n; i>=1; --i) {
      for (int j=1; j<=n-i; ++j){
         printf("  ");
      }
      for (int k=i; k<=2*i-1; ++k){
         printf("* ");
      }
      for (int q=1; q<=i-1; ++q){
         printf("* ");
      }
      printf("\n");
   }
   return 0;
}
